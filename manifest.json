{
    "manifest_version": 2,
  
    "name": "Time to Stop",
    "description": "A timer",
    "version": "1.0",
    "icons": { "16": "icon.png",
      "48": "icon.png",
     "128": "icon.png" 
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Set a timer!",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["library/EventEmitter.min.js","background.new.js"]
    },

    "permissions": [
      "activeTab",
      "tabs",
      "*://*/*"
    ],
    "web_accessible_resources": [
      "media/*",
      "inject.js"
    ]
  }